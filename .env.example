# PostgreSQL Configuration
POSTGRES_USER=oculus_user
POSTGRES_PASSWORD=oculus_password
POSTGRES_DB=oculus_db

# Backend Configuration
DATABASE_URL=postgresql+asyncpg://oculus_user:oculus_password@postgres:5432/oculus_db
DATABASE_ECHO=False

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# JWT Configuration
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here

# Email Configuration (Resend)
RESEND_API_KEY=your_resend_api_key_here

# Docker Hub Configuration
DOCKER_HUB_USERNAME=forfrontsolutions
DOCKER_HUB_PAT=your_docker_hub_pat_here

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000

# Environment
ENVIRONMENT=development
DEBUG=True

# Redis Configuration (for training worker)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://localhost:6379/0

# Training Worker Configuration
JOB_QUEUE=training_queue
RESULT_KEY_PREFIX=result
PROGRESS_CHANNEL_PREFIX=oculus:training:progress
WORKER_CONCURRENCY=2
JOB_TIMEOUT_SECONDS=3600

# GPU Configuration
GPU_ENABLED=true

# API Keys
POLYGON_API_KEY=your_polygon_api_key_here

# Logging
LOG_LEVEL=INFO

# Admin Seed (set strong values in production)
ADMIN_EMAIL=admin@oculusalgorithms.com
ADMIN_PASSWORD=Admin123!
ADMIN_NAME=Admin
